@model List<FileModel>
@{
    ViewData["Title"] = "User Home Page";
}

<div class="container">
    <div class="row align-items-center justify-content-end" style="margin-top: 1rem">
        <div class="col-xs-4 flex-row justify-content-end">
            <form method="post" enctype="multipart/form-data" asp-controller="Home" asp-action="Upload">
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" name ="files"class="custom-file-input" id="inputGroupFile01" multiple>
                        <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                    </div>
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="submit">Upload</button>
                    </div>
                </div>
            </form>
            
        </div>
    </div>
    <hr />
    <div class="row">
        @for (var i = 0; i < Math.Min(5, Model.Count); i++)
        {
            if (Model[i].Name != ".gitignore")
            {
                <div class="col card-column">
                    <partial name="_QuickAccessCard" model="@Model[i]" />
                </div>
            }
        }
        @for (var i = 0; i < (5 - Model.Count); i++)
        {
            <div class="col card-column"></div>
        }
    </div>
    <div style="margin-top: 1rem">
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Owner</th>
                    <th>Last Modified</th>
                    <th>Size</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (FileModel fm in Model)
                {
                    <partial name="_FileListItem" model="@fm" />
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        $('#inputGroupFile01').on('change', function () {
            console.log($(this));
            if ($(this)[0].files.length > 1) {
                $(this).next('.custom-file-label').html($(this)[0].files.length + " files selected.");
            }
            else {
                var fileName = $(this).val();
    
                $(this).next('.custom-file-label').html(fileName);
            }
    
        })
    </script>
    <script src="https://code.jquery.com/jquery-3.1.1.min.js"></script>
    <script src="~/js/file.js"></script>
}

